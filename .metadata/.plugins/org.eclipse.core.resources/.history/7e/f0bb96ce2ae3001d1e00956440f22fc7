package com.ojas.spring.git;

import java.io.IOException;

public class GitReview {
	public static void main(String[] args) throws IOException {
	    String token = "<your_access_token>";
	    String owner = "<repository_owner>";
	    String repo = "<repository_name>";
	    int pullRequestNumber = <pull_request_number>;

	    GitHubClient client = new GitHubClient();
	    client.setOAuth2Token(token);

	    GitHubService service = new GitHubService(client);

	    List<ReviewComment> comments = new ArrayList<>();
	    int page = 1;
	    while (true) {
	        List<ReviewComment> pageComments = service.getPullRequestReviewComments(owner, repo, pullRequestNumber, page);
	        if (pageComments.isEmpty()) {
	            break;
	        }
	        comments.addAll(pageComments);
	        page++;
	    }

	    for (ReviewComment comment : comments) {
	        System.out.println(comment.getBody());
	    }
	}


}
