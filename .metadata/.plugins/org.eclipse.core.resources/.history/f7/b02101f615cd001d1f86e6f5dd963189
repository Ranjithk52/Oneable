package com.ojas.git;
	import java.io.BufferedReader;
	import java.io.File;
	import java.io.IOException;
	import java.io.InputStreamReader;

	public class Git_Content {
	    public static void main(String[] args) throws IOException {
	        String repoPath = "/path/to/your/repo";
	        String command = "git ls-files | xargs wc -l | awk '{s+=$1} END {print s}'";
	        Process process = Runtime.getRuntime().exec(command, null, new File(repoPath));
	        BufferedReader reader = new BufferedReader(new InputStreamReader(process.getInputStream()));
	        String output = reader.readLine();
	        reader.close();
	        System.out.println("Number of lines of code: " + output);
	    }
	}

