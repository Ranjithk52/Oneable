public class GitHubChangesCounter {
    public static void main(String[] args) throws IOException {
        String owner = "github_owner";
        String repoName = "github_repo";
        String branchName = "master";
        String token = "your_github_token";
        int numChanges = getNumChanges(owner, repoName, branchName, token);
        System.out.println("Number of changes: " + numChanges);
    }
    
    public static int getNumChanges(String owner, String repoName, String branchName, String token) throws IOException {
        try (GitHub github = new GitHubBuilder().withOAuthToken(token).build()) {
            GHRepository repo = github.getRepository(owner + "/" + repoName);
            GHCommit branchCommit = repo.getCommit(branchName);
            int numChanges = branchCommit.getFiles().size();
            return numChanges;
        }
    }
}


