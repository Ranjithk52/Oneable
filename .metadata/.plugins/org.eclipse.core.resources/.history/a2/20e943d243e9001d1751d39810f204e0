package com.ojas.spring.service;

import java.util.List;
import java.util.Optional;

import org.springframework.web.bind.annotation.RequestBody;

import com.ojas.spring.model.Branches;
import com.ojas.spring.model.GitIntegration;

public interface GitService {
	
	public String createRecord(GitIntegration integration);
	public Optional<GitIntegration> getRecordbyId(int id);
	public  String getGitContent(GitIntegration gitIntegration);
	public  int getNoOfLines(GitIntegration gitIntegration);
	public List<Branches> getBranchCount(GitIntegration gitIntegration);
	public int getTotalChanges(GitIntegration integration);
	public List<String> getCodeReviewComments(GitIntegration integration);
	public List<String> fetchCommitChanges(@RequestBody GitIntegration integration);
}
