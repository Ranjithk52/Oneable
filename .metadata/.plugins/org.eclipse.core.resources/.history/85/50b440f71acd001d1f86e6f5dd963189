package com.ojas.jira;
import java.net.URI;
import java.util.concurrent.ExecutionException;

import com.atlassian.jira.rest.client.api.JiraRestClient;
import com.atlassian.jira.rest.client.api.domain.Issue;
import com.atlassian.jira.rest.client.api.domain.SearchResult;
import com.atlassian.jira.rest.client.internal.async.AsynchronousJiraRestClientFactory;

public class JiraIntegrationExample {

    public static void main(String[] args) throws ExecutionException, InterruptedException {
        // Set up the JiraRestClient
        URI jiraServerUri = URI.create("https://your-jira-url.com");
        JiraRestClient jiraRestClient = new AsynchronousJiraRestClientFactory()
            .createWithBasicHttpAuthentication(jiraServerUri, "your-jira-username", "your-jira-password");

        // Search for issues using a JQL query
        SearchResult searchResult = jiraRestClient.getSearchClient()
            .searchJql("project = \"Your Project Key\" AND status = \"Open\"").get();

        // Loop through the issues and print their summaries
        for (Issue issue : searchResult.getIssues()) {
            System.out.println(issue.getSummary());
        }
    }
}
