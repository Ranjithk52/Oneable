import java.io.IOException;
import java.util.List;

import org.eclipse.egit.github.core.Comment;
import org.eclipse.egit.github.core.Repository;
import org.eclipse.egit.github.core.RepositoryId;
import org.eclipse.egit.github.core.client.GitHubClient;
import org.eclipse.egit.github.core.service.IssueService;
import org.eclipse.egit.github.core.service.RepositoryService;

public class GitReview {

    public static void main(String[] args) {
    	String accessToken = "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";
        String repositoryName = "Practice";
        String ownerName = "Ranjithk52";
        
        try {
            GitHubClient client = new GitHubClient();
            client.setOAuth2Token(accessToken);
            RepositoryService repoService = new RepositoryService(client);
            RepositoryId repoId = new RepositoryId(ownerName, repositoryName);
            Repository repository = repoService.getRepository(repoId);
            
            IssueService issueService = new IssueService(client);
            List<Comment> comments = issueService.getComments(repoId, 1);
            
            for (Comment comment : comments) {
                System.out.println(comment.getBody());
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}


