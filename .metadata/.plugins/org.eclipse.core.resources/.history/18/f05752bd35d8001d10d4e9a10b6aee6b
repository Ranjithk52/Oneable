package com.ojas.springboot.email;

import javax.mail.MessagingException;
import javax.mail.internet.MimeMessage;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.core.io.FileSystemResource;
import org.springframework.mail.SimpleMailMessage;
import org.springframework.mail.javamail.JavaMailSender;
import org.springframework.mail.javamail.MimeMessageHelper;
import org.springframework.stereotype.Service;

@Service
public class EmailSender {
	
	    @Autowired
	    private JavaMailSender mailSender;
	    public void sendSimpleMsg() {
	        SimpleMailMessage message=new SimpleMailMessage();
	        message.setFrom("manmadharao94@gmail.com");
	        message.setTo("kurubachandraprakash333@gmail.com");
	        message.setSubject("hello dear");
	        message.setText("good eveing");
	        mailSender.send(message);
	        System.out.println("success...........");
	    }
	 public void sendImage() throws MessagingException {
		 MimeMessage mm=mailSender.createMimeMessage();
	        MimeMessageHelper helper= new MimeMessageHelper(mm, true);
	        helper.setTo("kurubachandraprakash333@gmail.com");
	        helper.setSubject("image");
	        helper.setText("email send attachment");
	        FileSystemResource file= new FileSystemResource("C:\\Users\\mm22042\\Desktop\\download.jfif");
	        helper.addAttachment("attachment.jfif", file);
	        mailSender.send(mm);
	        System.out.println("image sent");

	 }
}
